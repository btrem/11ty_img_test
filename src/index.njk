---
layout: article
---
{% for post in collections.all %}

            <article>
                    <h2>
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                    </h2>

        {% if post.data.featuredImage %}
            {% picture post.data.featuredImage %}
        {%- endif %}


            </article>

{%- endfor %}
